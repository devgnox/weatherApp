{{> header}}

<div class="container">
 <div class="hero">
   <div class="cta">
     <h1 class="home_heading">Weather App is based on <a href="https://www.mapbox.com/" class="ext_links" target="_blank">Mapbox Geocoding</a> and <a href="https://weatherstack.com/" class="ext_links" target="_blank">Weatherstack</a> API's</h1>
   <p class="hero_text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Itaque eaque reprehenderit suscipit libero dolorum error hic animi? Maiores nam eaque in.</p>
   <div class="cta-buttons">
     <a href="#" class="btn btn-solid">Download on <ion-icon name="logo-apple"></ion-icon></a>
     <a href="#" class="btn btn-outlined">Download on <ion-icon name="logo-android"></ion-icon></a>
   </div>
   </div>
   <div class="phone-mockup">
     <img src="/img/appmockup.png
     " alt="Phone App" class="phone-mockup">
   </div>
 </div>
 <main>
   <div class="search">
          <h2 class="secondary_heading">Check your weather</h2>
          <ion-icon name="partly-sunny-outline" class="secondary-heading-icon"></ion-icon>
          <div class="search_box">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="loading_icon" id="loading_icon" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid">
              <circle cx="50" cy="50" fill="none" stroke-width="10" r="35" stroke-dasharray="164.93361431346415 56.97787143782138">
              <animateTransform attributeName="transform" type="rotate" repeatCount="indefinite" dur="1.1764705882352942s" values="0 50 50;360 50 50" keyTimes="0;1"></animateTransform>
              </circle>
              <!-- [ldio] generated by https://loading.io/ -->
            </svg>
<form action="" class="search_form">
           
            <input type="search" name="search_input" id="search_input" class="search_bar" placeholder="Enter city or coordinates">
            <button class="search-icon"><ion-icon name="search-outline"></ion-icon>
            </button>
            <p class="msg" id="msg"></p>
          </form></div>
        </div>
        <div class="next_forecast">
 <div class="card">
    <h3 class="card_heading" id="city">This is an example of how the location text would look like</h3>
    <div class="card_body">
      <div class="weather_desc">
        <p>At <span id="hour">00:00</span> your weather seems to be
        <span id="weather_desc">Raining</span></p>
        <p>And there's a <span id="precip">&dash;</span>% chance of rain</p>
      </div>
        <img src="/img/wa_logo.png" alt="weather pic" id="weather-pic" class="weather-pic">
      <div class="forecast">
        <div class="day"><p>Week Day</p><span id="day">{{day}}</span></div>
        <div class="humd"><p>Humidity</p><span id="humd">&dash;</span></div>
        <div class="feel_Like"><p>Feels Like</p><span id="feel_Like">&dash;</span>°</div>
        <div class="temperature"><p>Temperature</p><span  id="temperature">&dash;</span>°</div>
      </div>
    </div>
  </div>
  
  </div>
 </main>
</div>
  

<script src="/js/app.js"></script>
{{> footer}}